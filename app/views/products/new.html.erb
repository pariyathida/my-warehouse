<%= form_for @product.new do |f| %>
  <%= render "form", f: f %>

  <div class="w3-center">
    <div class="w3-bar">
      <%= f.button :add_item, class: "w3-button w3-round-large w3-teal w3-margin-top" do %>
        <i class="fa fa-plus" aria-hidden="true"></i>Add item
      <% end %>
    </div>
  </div>

<% end %>